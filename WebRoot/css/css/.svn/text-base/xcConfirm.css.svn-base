/*垂直居中*/
.verticalAlign{ vertical-align:middle; display:inline-block; height:100%; margin-left:-1px;}

.xcConfirm .xc_layer{position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: #666666; opacity: 0.5; z-index: 2147000000;}
.xcConfirm .popBox{position: fixed; left: 50%; top: 50%; background-color: #ffffff; z-index: 2147000001; width: 24rem; height: 15.8rem; margin-left: -12rem; margin-top: -7.9rem; border-radius: 4px; font-weight: bold; color: #535e66;}
.xcConfirm .popBox .ttBox{height: 2rem; line-height: 2rem; padding: 1rem 2rem; border-bottom: solid 1px #eef0f1;}
.xcConfirm .popBox .ttBox .tt{font-size:1.8rem; display: block; float: left; height: 3rem; position: relative;}
.xcConfirm .popBox .ttBox .clsBtn{display: block; cursor: pointer; width: 1.2rem; height: 1.2rem; position: absolute; top:1.4rem; right: 2.6rem; background: url(../img/icons_b.png) -48px -96px no-repeat;}
.xcConfirm .popBox .txtBox{padding:2rem 3rem 0rem 3rem; height:5rem; overflow: hidden;}
.xcConfirm .popBox .txtBox .bigIcon{float: left; margin-right:1.6rem; width:24px; height: 26px;background:url(../img/icons.png) no-repeat;}
.xcConfirm .popBox .txtBox p{width:14rem; height:8rem; margin-top:rem; line-height:2rem; overflow-x: hidden; overflow-y: auto; float:left;font-size:1.4rem;}
.xcConfirm .popBox .txtBox p input{width:36rem; height:1rem; border: solid 1px #eef0f1; font-size: 1.8rem; margin-top:0.6rem;}
.xcConfirm .popBox .btnArea{border-top: solid 1px #eef0f1;}
.xcConfirm .popBox .btnGroup{width:21rem;margin:auto;overflow:hidden;}
.xcConfirm .popBox .btnGroup .sgBtn{margin:0.5rem 0.5rem;}
.xcConfirm .popBox .sgBtn{display: block; cursor: pointer; float: left; width: 9.5rem; height:3.5rem; line-height: 3.5rem; text-align: center; color: #FFFFFF; border-radius: 2px;}
.xcConfirm .popBox .sgBtn.ok{background-color: #f79c1b; color: #FFFFFF;}
.xcConfirm .popBox .sgBtn.cancel{background-color:#e8e8e7; color:rgba(0,0,0,0.7);}